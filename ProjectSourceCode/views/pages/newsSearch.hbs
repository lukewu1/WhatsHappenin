<form action="/newsSearch" method="POST" class="mb-4">
  <input type="text" name="location" placeholder="Enter a location" value="{{location}}" class="form-control" required>
  <button type="submit" class="btn btn-primary mt-2">Search News</button>
</form>

<div class="row">
  {{#if message}}
    <div class="alert alert-danger">{{message}}</div>
  {{/if}}

  {{#each local_news}}
    <div class="col-md-4 mb-3">
      <div class="card">
        <img class="card-img-top" src="{{this.thumbnail}}" alt="{{this.title}}"> <!-- Update to use thumbnail -->
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.snippet}}</p>
          <p class="card-text">Source: {{this.source}}</p>
          <p class="card-text">Date: {{this.date}}</p>
          <a href="{{this.link}}" class="btn btn-primary" target="_blank">Read More</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
