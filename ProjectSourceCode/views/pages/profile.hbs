<head>
  {{!-- included libraries taken from lab4's index.html head --}}
  <!-- Bootstrap CSS library -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <!-- Bootstrap JS library -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous">
  </script>
</head>

<div class="flex justify-center">
   <div class="w-1/2">
       <div class="d-flex pt-4">
           <div class="w-1/2">
               <div class="d-flex justify-center pt-2">
                   <img src="{{profile.profile_picture}}" class="rounded-full w-52 h-52">
               </div>
                   <div class="d-flex justify-center pt-2" id="edit1" style="display: none !important;">
                       <button class="px-4 py-1 border border-gray-300 rounded-md text-gray-700 font-semibold hover:bg-gray-100" onclick="handleEdit()">Change Photo</button>
                   </div>
               </div>
           <div class="w-1/2">
               <div class="d-flex justify-center">
                   <div>
                       {{user.username}}
                   </div>
               </div>
               <div class="d-flex pt-2">
                   <div>
                       {{profile.profile_description}}
                   </div>
               </div>
                   <div class="d-flex justify-center pt-2" id="edit2" style="display: none !important;">
                       <button class="px-4 py-1 border border-gray-300 rounded-md text-gray-700 font-semibold hover:bg-gray-100" onclick="handleEdit()">Update Profile Description</button>
                   </div>
               </div>
           </div>
       <div class="d-flex pt-4 justify-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#prof">
                Edit Profile
            </button>
           {{!-- <button class="px-4 py-1 border border-gray-300 rounded-md text-gray-700 font-semibold bg-red-400" onclick="handleEdit()">Cancel Edditing</button> --}}
       </div>
       <div class="d-flex pt-4">
           Comments made by you
       </div>
   </div>
</div>

<div class="modal" tabindex="-1" id="prof">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit your profile</h5>
            </div>
            <div class="modal-body">
                <form method="POST" action="/updateUser">
                    <div class="mb-3 d-flex align-items-center">
                        <label for="username" class="form-label me-2">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="{{user.username}}">
                    </div>
                    <div class="mb-3 d-flex align-items-center">
                        <label for="description" class="form-label me-2">Description</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="{{profile.profile_description}}">
                    </div>
                    <button id="close_button" class="btn btn-primary" type="button" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button class="btn btn-primary" type="submit">
                        Update
                    </button>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>