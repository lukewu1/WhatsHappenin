</head>

<div class="article-card">
  <img src="{{thumbnail}}" alt="{{title}}" class="article-image">
  <h2 class="article-headline">{{title}}</h2>
  <p class="article-time">{{date}}</p>
  {{#if author}}
    <p class="article-author">By {{author}}</p>
  {{else}}
    <p class="article-author">By N/A</p>
  {{/if}}
  <a href="{{link}}" class="btn btn-primary" target="_blank">Read More</a>

  <!-- Save Article Form -->
  <form id="saveArticleForm-{{article_id}}" method="POST" action="#">
    <input type="hidden" name="title" value="{{title}}">
    <input type="hidden" name="date" value="{{date}}">
    <input type="hidden" name="thumbnail" value="{{thumbnail}}">
    <input type="hidden" name="link" value="{{link}}">
    <input type="hidden" name="author" value="{{author}}">
    <button type="submit" class="btn btn-secondary save-article" data-id="{{article_id}}" disabled>Loading...</button> 
  </form>
</div>

 
