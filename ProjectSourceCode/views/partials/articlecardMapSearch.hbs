<div class="article-card">
    <img src="{{thumbnail}}" alt="{{title}}" class="article-image">
    <h2 class="article-headline">{{title}}</h2>
    <p class="article-time">{{date}}</p>
    {{#if this.source.authors}}
        <p class="article-author">By {{source.authors}}</p>
    {{else}}
        <p class="article-author">By N/A</p>
    {{/if}}
    <a href="{{this.link}}" class="btn btn-primary" target="_blank">Read More</a>
</div>
 
{{!-- in the future, change names of partial variables to incorporate the API for news headlines --}}

<style>
  .article-card {
    border: 1px solid #ddd;
    padding: 1rem;
    width: 500px;
    border-radius: 5px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .article-card img {
    width: 100%;
    height: 300px; 
    object-fit: cover; /* Crop the image to fit */
    border-radius: 5px 5px 0 0; 
    }

  .article-card h2 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  .article-card p {
    margin: 0.3rem 0;
  }

  .btn-primary {
    float: right;
    margin-top: 0.5rem;
  }


</style>